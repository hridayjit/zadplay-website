<footer class="footer">
  <div class="footer-content">
    <div class="footer-text">
      <h2 class="footer-title">
        LET'S <span class="highlight-white">GRAB ALL THE ATTENTION.</span><br />
        <span class="highlight-white">TOGETHER.</span>
      </h2>
    </div>
    
    <div class="footer-image-container">
      <img src="/images/1.jpg" alt="Digital advertising display" class="footer-image" />
    </div>
    
    <div class="footer-bottom">
      <div class="footer-links">
        <a href="/about" class="footer-link">ABOUT</a>
        <a href="/privacy" class="footer-link">PRIVACY POLICY</a>
        <a href="/terms" class="footer-link">TERMS & CONDITIONS</a>
      </div>
      
      <p class="footer-copyright">
        Â© 2025. ZADPLAY TECHNOLOGIES. All rights reserved.
      </p>
    </div>
  </div>
</footer>

<script>
  import gsap from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  document.addEventListener('DOMContentLoaded', () => {
    const footerImage = document.querySelector('.footer-image');
    const footerTitle = document.querySelector('.footer-title');
    const footerLinks = document.querySelectorAll('.footer-link');
    const footerCopyright = document.querySelector('.footer-copyright');

    // Scroll-triggered animations for text
    gsap.from(footerTitle, {
      scrollTrigger: {
        trigger: '.footer',
        start: 'top 80%',
      },
      y: 50,
      opacity: 0,
      duration: 1,
      ease: 'power2.out'
    });

    gsap.from(footerLinks, {
      scrollTrigger: {
        trigger: '.footer-bottom',
        start: 'top 90%',
      },
      y: 30,
      opacity: 0,
      duration: 0.8,
      stagger: 0.1,
      ease: 'power2.out'
    });

    gsap.from(footerCopyright, {
      scrollTrigger: {
        trigger: '.footer-bottom',
        start: 'top 90%',
      },
      opacity: 0,
      duration: 0.8,
      delay: 0.3,
      ease: 'power2.out'
    });

    // Image starts straight, then tilts when scrolling into view
    if (footerImage) {
      gsap.to(footerImage, {
        scrollTrigger: {
          trigger: '.footer-image-container',
          start: 'top 70%',
          end: 'top 30%',
          scrub: 1,
        },
        rotation: -20,
        ease: 'power2.out'
      });
    }

    // Hover animation for image - additional tilt
    if (footerImage) {
      footerImage.addEventListener('mouseenter', () => {
        gsap.to(footerImage, {
          rotation: -12,
          scale: 1.05,
          duration: 0.5,
          ease: 'power2.out'
        });
      });

      footerImage.addEventListener('mouseleave', () => {
        gsap.to(footerImage, {
          rotation: -8,
          scale: 1,
          duration: 0.5,
          ease: 'power2.out'
        });
      });
    }

    // Hover animation for links
    footerLinks.forEach(link => {
      link.addEventListener('mouseenter', () => {
        gsap.to(link, {
          scale: 1.1,
          duration: 0.3,
          ease: 'power2.out'
        });
      });

      link.addEventListener('mouseleave', () => {
        gsap.to(link, {
          scale: 1,
          duration: 0.3,
          ease: 'power2.out'
        });
      });
    });
  });
</script>

