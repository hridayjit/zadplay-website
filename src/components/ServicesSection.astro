// ServicesSection component
---

<script>
    import gsap from 'gsap';
    import { ScrollTrigger } from 'gsap/ScrollTrigger';

    // Register ScrollTrigger plugin
    gsap.registerPlugin(ScrollTrigger);

    // Wait for DOM to be ready
    document.addEventListener('DOMContentLoaded', () => {
      // Fade-in + slide-up animation to services title
      gsap.from('.services-title', {
        y: 30,
        opacity: 0,
        duration: 0.8,
        scrollTrigger: {
          trigger: '.services-section',
          start: 'top 75%',
        },
      });

      // Staggered fade-in + slide-up to service items
      gsap.from('.service-item', {
        y: 20,
        opacity: 0,
        stagger: 0.2,
        scrollTrigger: {
          trigger: '.services-section',
          start: 'top 75%',
        },
      });

      // Staggered scale-in to service images
      gsap.from('.service-image', {
        scale: 0,
        duration: 0.6,
        stagger: 0.15,
        scrollTrigger: {
          trigger: '.services-section',
          start: 'top 75%',
        },
      });
    });
  </script>

<section class="services-section">
  <div class="services-container">
    <div class="services-header">
      <h2 class="services-title">
        Here's how we can help you to transform empty<br />
        spaces into sought after branding estates.
      </h2>
    </div>

    <div class="services-list">
      <div class="service-item">
        <div class="service-letter">A.</div>
        <div class="service-name">DIGITAL OUT-OF-HOME (DOOH)</div>
        <div class="service-image">
          <img
            src="/images/6.jpg"
            alt="Digital Out-of-Home advertising"
          />
        </div>
      </div>

      <div class="service-item">
        <div class="service-letter">B.</div>
        <div class="service-name">CONNECTED TV</div>
        <div class="service-image">
          <img
            src="/images/14.jpg"
            alt="Connected TV advertising"
          />
        </div>
      </div>

      <div class="service-item">
        <div class="service-letter">C.</div>
        <div class="service-name">FLOOR STANDING DISPLAYS</div>
        <div class="service-image">
          <img
            src="/images/3.jpg"
            alt="Floor standing displays"
          />
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Services Section */
  .services-section {
    background: #47a0ff;
    padding: 4rem 2rem;
    color: #000;
  }

  .services-container {
    max-width: 1400px;
    margin: 0 auto;
  }

  .services-header {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 3rem;
    flex-wrap: wrap;
    gap: 2rem;
  }

  .services-logo {
    background: #000;
    color: #47a0ff;
    padding: 0.75rem 1.5rem;
    font-weight: 900;
    font-size: 1.25rem;
    letter-spacing: 2px;
    border-radius: 8px;
  }

  .services-title {
    font-size: clamp(1.75rem, 3.5vw, 2.75rem);
    font-weight: 700;
    line-height: 1.3;
    text-align: center;
    flex: 1;
    min-width: 300px;
  }

  .services-cta {
    background: #ffd900;
    border: 3px solid #000;
    color: #000;
    padding: 0.875rem 2rem;
    font-weight: 700;
    font-size: 1rem;
    cursor: pointer;
    border-radius: 8px;
    transition: all 0.3s ease;
  }

  .services-cta:hover {
    background: #000;
    color: #ffd900;
  }

  .services-list {
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  .service-item {
    display: grid;
    grid-template-columns: auto 1fr auto;
    align-items: center;
    gap: 2rem;
    padding: 2rem 0;
    border-top: 3px solid #000;
  }

  .service-item:last-child {
    border-bottom: 3px solid #000;
  }

  .service-letter {
    font-size: clamp(2.25rem, 4.5vw, 3.75rem);
    font-weight: 900;
  }

  .service-name {
    font-size: clamp(1.75rem, 3.5vw, 2.75rem);
    font-weight: 700;
    text-align: center;
  }

  .service-image {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
  }

  .service-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Services Section Responsive */
  @media (max-width: 1024px) {
    .services-header {
      flex-direction: column;
      align-items: flex-start;
    }

    .services-title {
      font-size: clamp(1.5rem, 2.75vw, 2.25rem);
      text-align: left;
    }

    .service-name {
      text-align: left;
    }

    .service-image {
      width: 100px;
      height: 100px;
    }
  }

  @media (max-width: 768px) {
    .services-section {
      padding: 3rem 1.5rem;
    }

    .services-header {
      text-align: left;
      align-items: flex-start;
      margin-bottom: 2rem;
    }

    .services-title {
      font-size: 1.6rem;
      text-align: left;
      line-height: 1.4;
    }

    .services-title br {
      display: none;
    }

    .services-cta {
      width: 100%;
    }

    .service-item {
      display: grid;
      grid-template-columns: auto 1fr;
      grid-template-rows: auto auto;
      align-items: center;
      gap: 1rem 1rem;
      padding: 2rem 0;
      border-top: 2px solid #000;
    }

    .service-item:last-child {
      border-bottom: 2px solid #000;
    }

    .service-letter {
      font-size: clamp(2.5rem, 5.5vw, 3.5rem);
      font-weight: 900;
      line-height: 1;
      grid-column: 1;
      grid-row: 1;
    }

    .service-name {
      font-size: clamp(1.6rem, 4.5vw, 2.25rem);
      font-weight: 700;
      line-height: 1.2;
      text-align: left;
      grid-column: 2;
      grid-row: 1;
      align-self: center;
    }

    .service-image {
      grid-column: 1 / -1;
      grid-row: 2;
      width: 100%;
      max-width: 100%;
      height: auto;
      aspect-ratio: 4 / 3;
      border-radius: 0;
      box-shadow: none;
      align-self: center;
      margin: 0.5rem 0;
    }

    .service-image img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
  }

  @media (max-width: 480px) {
    .services-section {
      padding: 2rem 1rem;
    }

    .services-logo {
      font-size: 1.1rem;
      padding: 0.6rem 1.25rem;
    }

    .services-header {
      margin-bottom: 1.5rem;
    }

    .services-title {
      font-size: 1.5rem;
      line-height: 1.4;
    }

    .service-item {
      padding: 1.5rem 0;
      gap: 1rem;
    }

    .service-letter {
      font-size: clamp(2.25rem, 6.5vw, 3rem);
    }

    .service-name {
      font-size: clamp(1.4rem, 4.5vw, 2rem);
    }

    .service-image {
      width: 100%;
      margin: 0.5rem 0;
    }
  }
</style>
